{
  "name": "chcp",
  "version": "1.0.0",
  "main": "index.js",
  "description": "A JS binding for couple of windows abstractions.",
  "author": "Gireesh Punathil <gpunathi@in.ibm.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibmruntimes/chcp"
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build",
    "build": "node-pre-gyp rebuild --build-from-source && node-pre-gyp package",
    "lint": "eslint .",
    "test": "tap test/*.js"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "files": [
    "LICENSE",
    "CONTRIBUTING.md",
    "README.md",
    "index.js",
    "src/chcp.cc",
    "binding.gyp",
    "test/"
  ],
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-strongloop": "^2.1.0",
    "tap": "^10.7.3"
  },
  "dependencies": {
    "node-pre-gyp": "^0.12.0"
  },
  "binary": {
    "module_name": "chcp",
    "module_path": "./build/Release/binding/{node_abi}-{platform}-{arch}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/ibmruntimes/chcp/releases/download/",
    "remote_path": "{version}"
  },
  "os": [
    "win32"
  ]
}
